{
  "version": 2,
  "routes": [
    {
      "src": "/api/webhook",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/webhook.js"
    },
    {
      "src": "/api/presentation",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/presentation.js"
    },
    {
      "src": "/api/status",
      "methods": ["GET", "OPTIONS"],
      "dest": "/api/status.js"
    }
  ],
  "functions": {
    "api/webhook.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/presentation.js": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/status.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 
{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/assets/(.*)\\.js$",
      "headers": {
        "content-type": "application/javascript"
      },
      "dest": "/assets/$1.js"
    },
    {
      "src": "^/assets/(.*)\\.css$",
      "headers": {
        "content-type": "text/css"
      },
      "dest": "/assets/$1.css"
    },
    {
      "src": "^/manifest\\.json$",
      "headers": {
        "content-type": "application/json"
      },
      "dest": "/manifest.json"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      },
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/webhook.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 